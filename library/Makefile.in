	$(srcdir)/prandom.yap \
	$(srcdir)/queues.yap \
	$(srcdir)/random.yap \
	$(srcdir)/range.yap \
	$(srcdir)/rbtrees.yap \
	$(srcdir)/regexp.yap \
	$(srcdir)/rltree.yap \
	$(srcdir)/sockets.yap \
	$(srcdir)/splay.yap \
	$(srcdir)/stringutils.yap \
	$(srcdir)/system.yap \
