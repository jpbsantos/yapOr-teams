	$(srcdir)/atts.yap \
	$(srcdir)/autoloader.yap \
	$(srcdir)/avl.yap \
	$(srcdir)/bhash.yap \
	$(srcdir)/charsio.yap \
	$(srcdir)/clp/clpfd.pl \
	$(srcdir)/coinduction.yap \
	$(srcdir)/dbqueues.yap \
	$(srcdir)/dbusage.yap \
	$(srcdir)/dgraphs.yap \
	$(srcdir)/exo_interval.yap \
	$(srcdir)/expand_macros.yap \
	$(srcdir)/gensym.yap \
	$(srcdir)/hacks.yap \
	$(srcdir)/heaps.yap \
	$(srcdir)/lambda.pl \
	$(srcdir)/lineutils.yap \
	$(srcdir)/listing.yap \
	$(srcdir)/lists.yap \
	$(srcdir)/nb.yap \
	$(srcdir)/ordsets.yap \
	$(srcdir)/mapargs.yap \
	$(srcdir)/maplist.yap \
